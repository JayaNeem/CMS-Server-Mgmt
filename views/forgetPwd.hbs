<div class="container">
	<br><br><br>
	<div class="card" style="max-width: 40rem;">
  		<h4 class="card-header">Find ID</h4>
  		<br>
  		<div class="card-body">
  			<form action="submitId" method="post" class="col-md-12">
				<div class="form-group col-md-8">
			    	<label for="inputId">Enter Your Id</label>
			    	<input type="text" class="form-control" id="inputId" name="id" placeholder="Enter Id">
		    		{{#if msg}}
		    			<div class="danger-msg">{{msg}}</div>
		    			<br>
	      			{{/if}}
				</div>
				<button id="pwd-btn" type="submit" class="btn btn-primary float-right">Submit</button>
				<br><br>
			</form>
		</div>
	</div>
</div>
