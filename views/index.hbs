<div class="container">
	<div class="login-box col-sm-4">
		<h3>Admin Login</h3>
		{{#if successMsg}}
		  	<span class='success-msg'>{{successMsg}}</span>
		{{/if}}
		<hr>
		<form action="/admin/checkLogin" method="post">
		  	<div class="form-group">
		    	<div class="input-group input-group-lg">
		    		<div class="input-group-prepend">
		         		<span class="input-group-text" id="inputGroupPrepend"><i class="fa fa-user" aria-hidden="true"></i></span>
		        	</div>
		    		<input type="text" class="form-control" id="exampleInputId" name="aid" placeholder="Enter email" autocomplete="off" required>
		    	</div>
		  	</div>
		  	<div class="form-group">
		    	<div class="input-group input-group-lg">
		    	    <div class="input-group-prepend">
		    	      	<span class="input-group-text" id="inputGroupPrepend"><i class="fa fa-unlock-alt" aria-hidden="true"></i></span>
		    	    </div>
		    		<input type="password" class="form-control" id="exampleInputPassword" name="password" placeholder="Password" required>
				</div>
		  	</div>
		  	{{#if msg}}
		  		<span class='danger-msg'>{{msg}}</span>
		  	{{/if}}
		  	<a href="admin/forgetPwd">Forgot Password?</a>
		  	<hr class="login-hr">
		  	<button type="submit" class="btn btn-primary">Submit</button>
		</form>
	</div>
	<div class="company-name-div">
		<h1 class="company-name">Server Management</h1> 
		<h1 class="company-name">CMS</h1>
	</div>
</div>